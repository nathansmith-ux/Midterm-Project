<!DOCTYPE html>
<html lang="en">

<head>
  <title>messages</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/messages.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <!-- Text Font From Google -->
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bungee&family=Nunito:ital@1&family=Source+Sans+3:ital,wght@0,300;0,600;1,300;1,600&display=swap" rel="stylesheet">

  <!-- Boot strap and font awesome -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

  <script src="/socket.io/socket.io.js"></script>
  <script src="/vendor/jquery-3.0.0.js"></script>
  <!-- <script defer src="/scripts/messages.js"></script> -->
  <script defer src="/scripts/messages-convo-test.js"></script>
</head>

<body>

   <!-- Navigation -->
   <%- include('partials/navbar') %>

    <div class="chat-interface">
      <h1 class="fw-bold text-center"></h1>
      <div class="col-lg-12 mx-auto">
        <div id="center-container">
          <div id="chat-container">

          <!-- Chat Messages Go Here-->
          <% if (messages) { %>
            <% for (let i = 0; i < messages.length; i++) { %>
              <!-- We can set the classes with userId for sent and received  -->
              <div class="message-container <%= i % 2 === 0 ? 'other-person' : '' %>">
                <p><%= messages[i].content %></p>
              </div>
              <% } %>
              <% } %>
          </div>
        </div>
      </div>
    </div>

      <div id="reply-section" class="col-lg-12 mx-auto">
        <form id="reply-form">
          <input type="text" id="response-message" placeholder="Start Typing A Message To Respond">
          <button type="button" id="reply-button">Send</button>
        </form>
      </div>

  <!-- Footer -->
  <%- include('partials/footer') %>

      <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
      <!-- Include all compiled plugins (below), or include individual files as needed -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
    </body>

    </html>
